<p id="notice"><%= notice %></p>

<h1>Mismatched Indices</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Step</th>
      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mismatched_indices.each do |mismatched_index| %>
      <tr>
        <td><%= mismatched_index.game_id %></td>
        <td><%= mismatched_index.step_id %></td>
        <td><%= mismatched_index.index %></td>
        <td><%= link_to 'Show', mismatched_index %></td>
        <td><%= link_to 'Edit', edit_mismatched_index_path(mismatched_index) %></td>
        <td><%= link_to 'Destroy', mismatched_index, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

